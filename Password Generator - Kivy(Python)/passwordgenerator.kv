MainPage:

<MainPage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"
    orientation: "vertical"
    Label:
        text: "Password Generator"
        font_type: "Nexa_Regular.ttf"
        font_size: "40sp"
    Label:
        text: "Password Length(Minimum of 8)"
        font_type: "Nexa_Regular.ttf"
        size_hint: 1, .2
        font_size: "17sp"
    BoxLayout:
        size_hint: 1, .5
        Slider:
            id: character_slider
            min: 8
            max: 35
            on_value: root.set_slider_value(self)
            size_hint: 0.7, 1
        Label:
            size_hint: None, 1
            text: str(int(character_slider.value))
            font_type: "Nexa_Regular.ttf"
            font_size: "17sp"
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Include Numbers(0-9)"
            font_type: "Nexa_Regular.ttf"
            font_size: "20sp"
        ToggleButton:
            on_state: root.toggle_number_state(self)
            text: "No"
            font_type: "Nexa_Regular.ttf"
            background_color: 1, .7, .7, .5
            font_size: "30sp"
            size_hint: .5, 1
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Include Symbols(@, #, $, %)"
            font_type: "Nexa_Regular.ttf"
            font_size: "20sp"
        ToggleButton:
            on_state: root.toggle_symbol_state(self)
            text: "No"
            font_type: "Nexa_Regular.ttf"
            background_color: 1, .7, .7, .5
            font_size: "30sp"
            size_hint: .5, 1
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Include Capitals(A, B, C)"
            font_type: "Nexa_Regular.ttf"
            font_size: "20sp"
        ToggleButton:
            on_state: root.toggle_capital_state(self)
            text: "No"
            font_type: "Nexa_Regular.ttf"
            background_color: 1, .7, .7, .5
            font_size: "30sp"
            size_hint: .5, 1
    Button:
        text: "Generate Password"
        on_press: root.generate_password()
        font_type: "Nexa_Regular.ttf"
        background_color: 1, .7, .7, .5
        font_size: "30sp"
    Button:
        text: root.password_button_text
        font_type: "Nexa_Regular.ttf"
        disabled: root.password_generated
        on_press: root.copy_password()
        background_color: 1, .7, .7, .5